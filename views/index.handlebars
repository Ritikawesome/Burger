
<div id="header" class="text-center">
    <h1 id="title">Burger!</h1>
</div>
<div class="container">
    <div class="col-sm-12 text-center">
        <h4 "text-center">Plese choose the burger</h4>
        <form class="button-size" action="/api/burgers" method="POST">
            <input type="text" class="text-center" id="insertBurger" name="burger_name" placeholder="Burger Name Please "></input>
            <span class="input-group-btn">
                <button type="submit" class="insertBurgerBtn btn btn-primary">YUMM!</button>
            </span>
        </form>
    </div>
    <div class="row">

        <div class="col-sm-6">
            {{#each burgers}} {{#unless this.devoured}}
            <form action="/api/update/{{this.id}}?_method=PUT" method="POST">
                <div class="input-group">
                    <input type="hidden" name="devoured" value="true">
                    <li class="form-control uneaten">{{this.burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="eatBurger btn btn-info" data-id="{{id}}" data-eat="{{devoured}}" type="submit">Devour It!</button>
                    </span>
                </div>
            </form>
            {{/unless}} {{/each}}
        </div>

        <div class="col-sm-6">
            {{#each burgers}} {{#if this.devoured}}
            <div>
                <li class="form-control devoured">{{this.burger_name}}</li>
            </div>
            </form>
            {{/if}} {{/each}}
        </div>
    </div>
    <br>
</div>

